<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>AreaCheckServlet</servlet-name>
        <servlet-class>app.servlets.AreaCheckServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>app.filters.AutoFilter</filter-class>
        <init-param>
            <param-name>secret</param-name>
            <param-value>8520</param-value>
        </init-param>
    </filter>
    <servlet>
        <servlet-name>ControlServlet</servlet-name>
        <servlet-class>app.servlets.ControllerServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/control</url-pattern>
        <servlet-name>ControlServlet</servlet-name>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>AreaCheckServlet</servlet-name>
        <url-pattern/>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlServlet</servlet-name>
        <url-pattern>/control</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ClearServlet</servlet-name>
        <servlet-class>app.servlets.ClearServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClearServlet</servlet-name>
        <url-pattern>/clear</url-pattern>
    </servlet-mapping>
</web-app>